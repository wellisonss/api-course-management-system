{
	"compilerOptions": {
	  "target": "ES2021",
	  "module": "commonjs", 
	  "allowJs": true,
	  "esModuleInterop": true,
	  "forceConsistentCasingInFileNames": true,
	  "strict": false,
	  "skipLibCheck": true,
	  "emitDecoratorMetadata": true,
	  "experimentalDecorators": true,
	  "outDir": "./dist",
	  "rootDir": "./src",
	  "moduleResolution": "node",
	  "resolveJsonModule": true,
	},
	"include": [
	  "src/**/*.ts"
	]
  }